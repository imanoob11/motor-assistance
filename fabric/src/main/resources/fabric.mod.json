{
  "schemaVersion": 1,
  "id": "aimassistance",
  "version": "${version}",

  "name": "aimassistance",
  "description": "The only Minecraft Mod that helps to aim without giving an unfair PvP advantage. Useful for new players that are not used to play on a computer. Everything is configurable. Ideal to introduce Minecraft to your parents! ",
  "authors": [
    "lilgallon"
  ],
  "contact": {
    "homepage": "https://github.com/lilmods/aim-assistance/issues",
    "sources": "https://github.com/lilmods/aim-assistance"
  },

  "license": "GNU-GPL-3.0",
  "icon": "assets/aimassistance/icon.png",

  "environment": "*",
  "entrypoints": {
    "main": [
      {
        "adapter": "kotlin",
        "value": "dev.gallon.aimassistance.fabric.AimAssistance"
      }
    ],
    "modmenu": [
      "dev.gallon.aimassistance.fabric.config.ModMenu"
    ]
  },
  "mixins": [
    "aimassistance.mixins.json"
  ],

  "depends": {
    "fabricloader": ">=0.14.0",
    "minecraft": "1.19.x",
    "java": ">=17",
    "fabric-language-kotlin": ">=1.9.4+kotlin.1.8.21",
    "cloth-config": ">=10.0.0"
  },
  "suggests": {}
}
